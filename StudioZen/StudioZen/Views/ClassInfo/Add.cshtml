@using StudioZen.ViewModels
@model AddClassInfoViewModel

<h1>Add Class</h1>

<form asp-controller="ClassInfo" asp-action="Add" method="post">

	

	<div class="form-group">
		<label asp-for="Name"></label>
		<input class="form-control" asp-for="Name"/>
		<span asp-validation-for="Name"></span>
	</div>
	<div class="form-group">
		<label asp-for="StartDate"></label>
		<input class="form-control" asp-for="StartDate" />
		<span asp-validation-for="StartDate"></span>
	</div>
	<div class="form-group">
		<label asp-for="EndDate"></label>
		<input class="form-control" asp-for="EndDate"/>
		<span asp-validation-for="EndDate"></span>
	</div>
	
	<div class="form-group">
		<label asp-for="MaximumSpots"></label>
		<input class="form-control" asp-for="MaximumSpots"/>
		<span asp-validation-for="MaximumSpots"></span>
	</div>

	<br />
	<input type="submit" value="Add Class Information"/>
</form>
